        <ul id="flexiselDemo3">
            <li><img src="~/images/lapto1.jpg" /></li>
            <li><img src="~/images/lapto2.jpg" /></li>
            <li><img src="~/images/lapto3.jpg" /></li>
            <li><img src="~/images/lapto4.jpg" /></li>
            <li><img src="~/images/lapto5.jpg" /></li>
        </ul>
        <h3>Lo ultimo en tecnologia</h3>
        <script type="text/javascript">
		$(window).load(function() {
			$("#flexiselDemo3").flexisel({
				visibleItems: 5,
				animationSpeed: 1000,
				autoPlay: true,
				autoPlaySpeed: 3000,
				pauseOnHover: true,
				enableResponsiveBreakpoints: true,
		    	responsiveBreakpoints: {
		    		portrait: {
		    			changePoint:480,
		    			visibleItems: 1
		    		},
		    		landscape: {
		    			changePoint:640,
		    			visibleItems: 2
		    		},
		    		tablet: {
		    			changePoint:768,
		    			visibleItems: 3
		    		}
		    	}
		    });
		});
        </script>
        <script type="text/javascript" src="~/js/jquery.flexisel.js"></script>
    </div>
</div>



